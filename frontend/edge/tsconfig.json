{
  "compilerOptions": {
    "target": "esnext",
    "types": ["node"],
    "module": "ESNext",
    "lib": ["es2022", "DOM"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "rootDir": "./",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
