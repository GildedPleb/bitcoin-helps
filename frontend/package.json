{
  "name": "btcfix-fe",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.7.17",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "emotion-reset": "^3.0.1",
    "graphql": "^16.7.1",
    "graphql-ws": "^5.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "react-select": "^5.7.4"
  },
  "scripts": {
    "start:dev": "VITE_APP_STAGE=dev vite",
    "start:test": "vite preview --outDir test-dist --port 3000",
    "build:deploy": "VITE_APP_STAGE=$STAGE tsc && vite build --outDir dist",
    "build:test": "VITE_APP_STAGE=dev tsc && vite build --outDir test-dist",
    "test": "jest src",
    "test:e2e": "concurrently --kill-others \"npm run start:test\" \"jest src\"",
    "test:watch": "react-scripts test",
    "generate": "source .env && echo $VITE_APP_API_URL_HTTP_DEV && export SCHEMA=${VITE_APP_API_URL_HTTP_DEV} && npx graphql-codegen",
    "tree": "tree -I 'node_modules|dist|test-dist' -P '*.tsx|*.ts|*.css'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not iOS < 15",
      "not chrome < 80"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^3.3.7",
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.3",
    "@types/jest-image-snapshot": "^6.1.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "concurrently": "^8.2.0",
    "eslint-config-current-thing": "^1.3.0",
    "jest": "^29.6.1",
    "jest-image-snapshot": "^6.1.0",
    "puppeteer": "^20.9.0",
    "puppeteer-core": "^20.9.0",
    "serverless-lift": "^1.27.0",
    "serverless-scriptable-plugin": "^1.3.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
